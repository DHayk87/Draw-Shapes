{
    "manifest_version": 3,
    "name": "Shapes drawer",
    "version": "1.0",
    "description": "Draw shapes on pages",
    "permissions": ["scripting", "activeTab"],
    "icons": {
        "128": "icons/icon_128x128.png",
        "512": "icons/icon_512x512.png"
    },
    "action": {
        "default_title": "Draw shapes",
        "default_icon": {
            "16": "icons/icon_16x16.png",
            "24": "icons/icon_24x24.png",
            "32": "icons/icon_32x32.png",
            "64": "icons/icon_64x64.png",
            "128": "icons/icon_128x128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [
        {
            "resources": ["arrows.css", "icons/eraser.png"],
            "matches": ["<all_urls>"]
        }
    ]
}
